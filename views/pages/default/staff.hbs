<!--Main layout-->
<main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">

        <!-- Heading -->
        <div class="card mb-4 wow fadeIn">
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                <span>New Staff</span>
                </h4>
                <section class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" id="">View Records</button>
                </section>
            </div>
        </div>
        <!-- Heading -->

        <div class="row wow fadeIn">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header text-left">
                        Staff creation form
                    </div>
                    <div class="card-body">
                        <form action="" method="post">
                            <input type="text" id="name" name="name" class="form-control mb-4" placeholder="Fullname" value="">
                            <input type="text" id="name" name="name" class="form-control mb-4" placeholder="Phone" value="">
